<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <!--Main Menu Styles-->
    <Style TargetType="Button" x:Key="styleMenuButton">
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="MaximumWidthRequest" Value="300"/>
        <Setter Property="HeightRequest" Value="70"/>
        <Setter Property="TextColor" Value="#000000"/>
    </Style>

    <!--Game Page Styles-->
    <Style TargetType="Label" x:Key="styleInfoLabel">
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
    </Style>

    <Style TargetType="Border" x:Key="styleInfoBorder">
        <Setter Property="BackgroundColor" Value="#55BBFFBB"/>
    </Style>

    <Style TargetType="Border" x:Key="styleEmptyLetterBorder">
        <Setter Property="WidthRequest" Value="75" />
        <Setter Property="HeightRequest" Value="110" />
        <Setter Property="Stroke" Value="#000" />
        <Setter Property="StrokeThickness" Value="2" />
        <Setter Property="StrokeShape" Value="RoundRectangle 6"/>
    </Style>

    <Style TargetType="Label" x:Key="styleEmptyLetterLabel">
        <Setter Property="HorizontalTextAlignment" Value="Center"/>
        <Setter Property="VerticalTextAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="35"/>
    </Style>

    <Style TargetType="Border" x:Key="styleLetterButtonBorder">
        <Setter Property="WidthRequest" Value="75" />
        <Setter Property="HeightRequest" Value="60" />
        <Setter Property="Stroke" Value="#000" />
        <Setter Property="StrokeThickness" Value="2" />
        <Setter Property="StrokeShape" Value="RoundRectangle 6"/>
        <Setter Property="BackgroundColor" Value="#FFAAAA"/>
    </Style>

    <Style TargetType="Border" x:Key="styleLetterButtonBorderDisabled">
      <Setter Property="WidthRequest" Value="75" />
      <Setter Property="HeightRequest" Value="60" />
      <Setter Property="Stroke" Value="#000" />
      <Setter Property="StrokeThickness" Value="2" />
      <Setter Property="StrokeShape" Value="RoundRectangle 6"/>
      <Setter Property="BackgroundColor" Value="#AAAAAA"/>
    </Style>

    <Style TargetType="Button" x:Key="styleLetterButton">
        <Setter Property="FontSize" Value="35"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>
</ResourceDictionary>